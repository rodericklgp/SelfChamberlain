<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/btn_login"
        android:enabled="true"
        android:maxWidth="120dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:textColor="#ff5341ff"
        android:textStyle="bold|normal|italic"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="119dp"
        android:layout_below="@+id/tb_Pwd"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/btn_Cancel"
        android:enabled="true"
        android:maxWidth="120dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:textColor="#ff5341ff"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignTop="@+id/btn_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:id="@+id/tv_LoginName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:textColor="#ff306dff"
        android:layout_alignBottom="@+id/tb_loginName"
        android:layout_marginLeft="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tb_loginName"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@+id/btn_Cancel"
        android:layout_alignEnd="@+id/btn_Cancel"
        android:layout_toEndOf="@+id/tv_LoginName"
        android:layout_toRightOf="@+id/tv_LoginName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tb_Pwd"
        android:layout_marginTop="27dp"
        android:textColor="#ff306dff"
        android:layout_below="@+id/tv_LoginName"
        android:layout_alignRight="@+id/tb_loginName"
        android:layout_alignEnd="@+id/tb_loginName"
        android:layout_alignLeft="@+id/tb_loginName"
        android:layout_alignStart="@+id/tb_loginName"
        android:inputType="textPassword"
        android:lines="1"
        android:linksClickable="false"
        android:maxLines="1"
        android:minLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:id="@+id/textView"
        android:textColor="#ff306dff"
        android:layout_alignTop="@+id/tb_Pwd"
        android:layout_alignLeft="@+id/tv_LoginName"
        android:layout_alignStart="@+id/tv_LoginName"
        android:layout_marginTop="15dp" />

</RelativeLayout>
